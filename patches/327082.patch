@@ -107,8 +107,6 @@ stdenv.mkDerivation (final: {
     "--localstatedir=/var"
   ];
 
-  hardeningDisable = [ "fortify3" ];
-
   postInstall = ''
     installShellCompletion --bash scripts/pacman --zsh scripts/_pacman
     wrapProgram $out/bin/makepkg \
